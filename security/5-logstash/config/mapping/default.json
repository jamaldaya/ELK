{
  "index_patterns": [
    "default"
  ],
  "template": "default",
  "version": 1,
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "index.lifecycle.name": "ilm-logstash",
    "index.lifecycle.rollover_alias": "defaultalias"
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date",
        "format": "strict_date_optional_time"
      },
      "host": {
        "properties": {
          "name": {
            "type": "keyword"
          }
        }
      },
      "beamline": {
        "type": "keyword"
      },
      "message": {
        "type": "text"
      },
      "log": {
        "properties": {
          "file": {
            "properties": {
              "path": {
                "type": "text"
              }
            }
          },
          "offset": {
            "type": "long"
          }
        }
      }
    }
  }
}